{
  "extends": ["@tsconfig/node20/tsconfig.json"],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "declarationDir": "./types",
    "resolveJsonModule": true
  },
  "include": ["./index.js", "lib/**/*.js"],
  "exclude": ["bin"]
}
